<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="RedBus Automation Test Suite" verbose="1" parallel="false">


    <!-- Listeners for reporting -->
    <listeners>
        <listener class-name="com.automation.redbus.listeners.ExtentTestListener"/>
    </listeners>

    <test name="Bus Booking Tests" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.automation.redbus.tests.RedBusBookingTest">
                <methods>
                    <!-- Primary tests - enabled by default -->
                    <include name="testBusSearchFlow"/>
                    <include name="testSearchResultsPageComponents"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>